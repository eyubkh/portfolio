{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@/*": ["src/*"]
    },
  },
  // Also make sure to add any other directories as needed
  "include": ["src/**/*"]
}