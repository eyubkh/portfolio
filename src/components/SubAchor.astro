---
type Props = {
  to?: string;
  class?: string;
  external?: boolean;
  label: string;
}
const { to = "#", class: className, external = false, label} = Astro.props
---

<a href={to} class={`anchor ${className}`} target={external ? '_blank' : '_self'} rel="noreferrer" aria-label={label}>
 <slot />
</a>

<style>
 .anchor {
  position: relative;
  padding: 2px 4px;
  cursor: pointer;
  transition: color 200ms ease ;
 }

 .anchor:after {
  content: '';
   position: absolute;
   left: 0;
   bottom: 0;
   height: 3px;
   width: 100%;
   background-color: #333;
   opacity: .8;
   border-radius: 2px;
   transition: height 200ms ease  ;
   z-index: -1;
 }

 .anchor:hover::after {
  height: 100%;
 }

 .anchor:hover {
    color: white;
  }

 @media (prefers-color-scheme: dark) {
  .anchor:after {
    background-color: white;
  }
  .anchor:hover {
    color: black;
  }
 }
</style>