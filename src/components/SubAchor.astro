---
type Props = {
  to?: string;
  class?: string;
  external?: boolean;
}
const { to = "#", class: className, external = false} = Astro.props
---

<a href={to} class={`anchor ${className}`} target={external ? '_blank' : '_self'}>
 <slot />
</a>

<style>
 .anchor {
  position: relative;
  padding: 2px 4px;
  cursor: pointer;
 }

 .anchor:after {
  content: '';
   position: absolute;
   left: 0;
   bottom: 0;
   height: 3px;
   width: 100%;
   background-color: #333;
   opacity: .1;
   border-radius: 2px;
   transition: height 200ms ease  ;
 }

 .anchor:hover::after {
  height: 100%;
 }
</style>